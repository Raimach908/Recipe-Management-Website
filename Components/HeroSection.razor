@inject NavigationManager NavigationManager
@inject SessionService SessionService

<div class="container-fluid p-0 position-relative" style="background-image: url('/Images/front1.jfif'); background-size: cover; height: 100vh;">
    <div class="overlay position-absolute w-100 h-100"></div>

    <div class="row h-100 m-0">
        <!-- Left Side Text Content -->
        <div class="col-md-8 d-flex flex-column justify-content-center align-items-start text-white pl-md-5 pl-3 hero-text">
            <h1 class="display-4 font-weight-bold mb-3 animated-text" style="font-family: 'Georgia', serif;">
                WELCOME TO <span style="color: #b6542d;">YOUR RECIPE VAULT</span>
            </h1>
            <p class="lead mb-2 animated-text-delay" style="font-family: 'Georgia', serif;">
                Discover, Cook & Share the Best Recipes
            </p>
            <p class="lead mb-4 animated-text-delay" style="font-family: 'Georgia', serif;">
                Find new and exciting recipes, share your own, and become part of a growing cooking community!
            </p>
            <a @onclick="ExploreRecipes" class="btn btn-lg animated-button" style="font-family: 'Georgia', serif; font-weight: bold; background-color: #b6542d; color: white;">
                Explore Recipes
            </a>
        </div>

        <!-- Right Side Image -->
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="/Images/front2.png" class="overlay-image" alt="Decorative image for cooking" />
        </div>
    </div>
</div>

@code {
    private async Task ExploreRecipes()
    {
        // Check if the user is logged in by retrieving session data
        var sessionUser = await SessionService.GetSession<User>("LoggedInUser");

        if (sessionUser != null)
        {
            // User is logged in, navigate to the recipes page
            NavigationManager.NavigateTo("/recipeList");
        }
        else
        {
            // User is not logged in, redirect to login page
            NavigationManager.NavigateTo("/login");
        }
    }
}