@inherits LayoutComponentBase
<link rel="stylesheet" href="css/nav.css" />
<!-- Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


<div class="layout-container d-flex flex-column min-vh-100">
    <!-- Navbar Component -->
    <NavMenu />

    <!-- Main content section -->
    <main class="flex-grow-1">
        @Body
    </main>

    <!-- Main Content and Footer Wrapper -->
    <div class="d-flex flex-column min-vh-100">

        <!-- Footer Section -->
        <footer id="footer" class="container-fluid py-5 text-white text-center footer-animated mt-auto">
            <div class="row">
                <div class="col-md-4">
                    <h5 style="font-weight: bold;">About Recipe Vault</h5>
                    <p>Recipe Vault is your go-to destination for delicious recipes, expert cooking tips, and the best kitchen products. Join us to become a master chef at home!</p>
                </div>
                <div class="col-md-4">
                    <h5 style="font-weight: bold;">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/recipeList" class="text-white text-decoration-none">Recipes</a></li>
                        <li><a href="/about" class="text-white text-decoration-none">About Us</a></li>
                        <li><a href="/contact" class="text-white text-decoration-none">Contact Us</a></li>
                        <li><a href="/privacy-policy" class="text-white text-decoration-none">Privacy Policy</a></li>
                        <li><a href="/terms-of-service" class="text-white text-decoration-none">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 style="font-weight: bold;">Subscribe to Our Newsletter</h5>
                    <p>Stay updated with the latest recipes and exclusive offers. Subscribe now!</p>
                    <form>
                        <input type="email" class="form-control mb-2" placeholder="Your Email Address" />
                        <button type="submit" class="btn btn-lg" style="background-color: #FFCC00; color: #b6542d;">Subscribe</button>
                    </form>
                </div>
            </div>
            <hr class="bg-white">
            <div class="row" style="height: 1px;">
                <div class="col-md-6">
                    <p>&copy; 2024 Recipe Vault. All rights reserved.</p>
                </div>
                <div class="col-md-4 d-flex justify-content-center text-light">
                    <a href="#" class="text-white mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white mx-2"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </footer>
    </div>
</div>

