@page "/Features"

<link rel="stylesheet" href="css/features.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Features Section -->
    <section class="features-container text-center py-5">
        <h2 style="color: #b6542d; font-weight: bold;">Features of Recipe Vault</h2>
        <hr />
        <div class="row feature-row">
            @foreach (var feature in features)
            {
                <FeatureCard Title="@feature.Title" Description="@feature.Description" />
            }
        </div>
    </section>

    <!-- Move the Why Choose Us section below the Features section -->
    <section class="why-choose-section py-5">
        <WhyChooseUs />
    </section>

@code {
    private List<Feature> features = new List<Feature>
    {
        new Feature { Title = "Recipe Categories", Description = "Explore a wide variety of recipes categorized by cuisine, dietary needs, and meal types to find exactly what you're looking for." },
        new Feature { Title = "Meal Planning", Description = "Plan your meals effortlessly with our meal planner, allowing you to schedule recipes for the week and save time." },
        new Feature { Title = "User-Friendly Interface", Description = "Enjoy a sleek, user-friendly interface that makes navigating through recipes a breeze." },
        new Feature { Title = "Shopping List", Description = "Create shopping lists based on your selected recipes to make grocery shopping easier and more organized." },
        new Feature { Title = "Recipe Sharing", Description = "Share your favorite recipes with friends and family through social media or email." },
        new Feature { Title = "Nutritional Information", Description = "Get detailed nutritional information for each recipe to help you maintain a balanced diet." },
        new Feature { Title = "User Account Management", Description = "Create and manage your personal account to save your favorite recipes and meal plans for easy access." },
        new Feature { Title = "Recipe Ratings and Reviews", Description = "Rate recipes and leave reviews to help others find the best dishes and improve their cooking experience." },
        new Feature { Title = "Advanced Search Functionality", Description = "Easily search for recipes by ingredients, preparation time, and more to find the perfect meal for any occasion." },
    };

    public class Feature
    {
        public string Title { get; set; }
        public string Description { get; set; }
    }
}
