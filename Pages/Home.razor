        new Feature { Icon = "fas fa-search", Title = "Explore Recipes" },
        new Feature { Icon = "fas fa-book", Title = "Save Your Favorites" }
    };

    private List<FeaturedRecipe> featuredRecipes = new List<FeaturedRecipe>
    {
        new FeaturedRecipe { Icon = "fas fa-pizza-slice", Title = "Pizza Margherita", Description = "A delicious classic Italian pizza.", Image = "/Images/pizza2.jfif" },
        new FeaturedRecipe { Icon = "fas fa-hamburger", Title = "Ultimate Burger", Description = "Juicy beef burger with all the fixings.", Image = "/Images/burger.jfif" },
        new FeaturedRecipe { Icon = "fas fa-ice-cream", Title = "Homemade Ice Cream", Description = "A creamy and easy-to-make dessert.", Image = "/Images/icecream.jfif" }
    };
