    /* Center-align the login-container */
    .login-container {
        display: flex;
        flex-wrap: wrap;
        width: 90%;
        max-width: 800px;
        height: auto;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        margin: auto;
    }

