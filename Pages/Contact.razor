@page "/contact"

<link rel="stylesheet" href="css/contact.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="contact-container">
    <br />
    <h2 style="text-align: center; color: #b6542d; font-weight:bold">Feel free to contact us</h2>
    <hr />
    <br />

    <!-- Row 1: Map and Contact Info -->
    <div class="row mb-4">
        <div class="col-md-6">
            <ContactMap />
        </div>
        <div class="col-md-2">
            <ContactInfo />
        </div>
    </div>

    <!-- Row 2: Contact Form and Working Hours -->
    <div class="row mb-4">
        <div class="col-md-6">
            <ContactForm />
        </div>
        <div class="col-md-6">
            <WorkingHours />
        </div>
    </div>
</div>
