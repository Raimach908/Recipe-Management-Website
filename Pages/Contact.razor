@page "/contact"

<link rel="stylesheet" href="css/contact.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="contact-container">
    <br />
    <h2 style="text-align: center; color: #b6542d; font-weight:bold">Feel free to contact us</h2>
    <hr />
    <br />
    <!-- Row 1: Map and Contact Info -->
    <div class="row map-info-row">
        <div class="map-container">
            <div class="map-placeholder">
                <!-- Replace the src value with your actual Google Maps embed link -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3171.9096509355135!2d-122.08424968476803!3d37.42206517982568!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fb734e0706ef5%3A0xa04bf3c3a2f0f8d0!2sGoogleplex!5e0!3m2!1sen!2sus!4v1612994917101!5m2!1sen!2sus"
                        width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
                </iframe>
            </div>
        </div>

        <div class="contact-info">
            <h3>Contact Info</h3> 
            <p><i class="fas fa-map-marker-alt"></i> 143 - 158, Bernie Road, Kansas State, US</p>
            <p><i class="fas fa-phone"></i> +1 0202 326 987</p>
            <p><i class="fas fa-envelope"></i> enquires@bellamodel.com</p>
            <p><i class="fas fa-globe"></i> www.bellamodel.com</p>
            <div class="social-icons">
                <i class="fab fa-whatsapp"></i>
                <i class="fab fa-twitter"></i>
                <i class="fab fa-instagram"></i>
                <i class="fab fa-facebook"></i>
                <i class="fab fa-linkedin"></i>
            </div>
        </div>

    </div>

    <!-- Row 2: Leave a Message Form and Working Hours -->
    <div class="row form-hours-row">
        <div class="message-form">
            <h3>Leave a Message</h3>
            <form>
                <input type="text" placeholder="Name *" required />
                <input type="email" placeholder="Email *" required />
                <input type="text" placeholder="Subject" />
                <textarea placeholder="Message *" required></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div class="working-hours">
            <h3>Working Hours</h3>
            <ul class="working-hours-list">
                <li>Monday: <span>10 am - 10 pm</span></li>
                <li>Tuesday: <span>10 am - 10 pm</span></li>
                <li>Wednesday: <span>10 am - 10 pm</span></li>
                <li>Thursday: <span>10 am - 10 pm</span></li>
                <li>Friday: <span>10 am - 10 pm</span></li>
                <li>Saturday: <span>10 am - 10 pm</span></li>
                <li>Sunday: <span>Holiday</span></li>
            </ul>
        </div>
    </div>
</div>
